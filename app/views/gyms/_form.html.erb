<div class="shadow-sm p-3 mb-5 bg-white rounded">
  <div class="form-group">
    <%= form_with model: @gym, local: true do |form| %>
      <div class="form-group">
        <%= form.text_field :name, required: true, placeholder: "施設名", class: "form-control form" %>
      </div>
      <div class="form-group">
        <%= form.rich_text_area :body, class: 'form-control', required: true %>
      </div>
      <div class="text-center">
        <%= form.submit "投稿", class: 'btn btn-primary btn-block' %>
        <hr class="link my-2">
        <%= link_to "もどる", gyms_path, class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>
